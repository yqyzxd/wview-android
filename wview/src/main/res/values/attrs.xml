<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioLayout">
        <attr name="ratio" format="float" />
    </declare-styleable>
    <declare-styleable name="CarouselViewPager">
        <!--dots_margin_bottom Depricated link dots_margin-->
        <attr name="card_radius" format="dimension"></attr>
        <attr name="dots_margin_bottom" format="dimension"></attr>
        <attr name="dots_margin_top" format="dimension"></attr>
        <attr name="dot_inter_dot_margin" format="dimension"></attr>
        <attr name="dot_size" format="dimension"></attr>
        <attr name="dot_size_width" format="dimension"></attr>
        <attr name="dot_size_height" format="dimension"></attr>
        <attr name="dot_color_selector" format="reference"></attr>
        <attr name="dot_selected_drawable" format="reference"></attr>
        <attr name="dot_normal_drawable" format="reference"></attr>

        <attr name="ratio_image" format="float"></attr>

        <attr name="dot_gravity" format="enum">
            <enum name="overlay_bottom" value="0" />
            <enum name="below" value="1" />
        </attr>


    </declare-styleable>

    <!--自定义MLImageView的属性-->
    <declare-styleable name="EaseImageView">
        <attr name="ease_border_color" format="color" />
        <attr name="ease_border_width" format="dimension" />
        <attr name="ease_press_alpha" format="integer" />
        <attr name="ease_press_color" format="color" />
        <attr name="ease_radius" format="dimension" />
        <attr name="ease_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PhoneInputView">

        <attr name="textColor" format="color"></attr>
        <attr name="textColorHint" format="color"></attr>

    </declare-styleable>
</resources>